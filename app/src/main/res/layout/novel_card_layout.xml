<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height= "wrap_content"
              android:paddingBottom="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

            <ImageView
                android:id="@+id/novel_image"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>


            <ImageButton
                android:id="@+id/novel_action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@id/novel_image"
                android:layout_centerVertical="true"
                />



            <TextView
                android:id="@+id/novel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/novel_action_button"
                android:layout_toRightOf="@id/novel_image"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>